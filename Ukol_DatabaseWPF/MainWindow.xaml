<Window x:Class="Ukol_DatabaseWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ukol_DatabaseWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu>
            <MenuItem Header="Students" Click="NavigateToStudents_Click">
            </MenuItem>
            <MenuItem Header="Subjects" Click="NavigateToSubjects_Click">
            </MenuItem>
            <MenuItem Header="AssignSubject" Click="NavigateToAssignSubject_Click">
            </MenuItem>
            <MenuItem Header="DisplayStudentsBySubjectPage" Click="NavigateToDisplayStudentsBySubjectPage_Click">
            </MenuItem>
            <MenuItem Header="_Exit" Click="Exit_Click">
            </MenuItem>
        </Menu>
        <Frame Grid.Row="1" x:Name="MainFrame"/>
    </Grid>
</Window>
